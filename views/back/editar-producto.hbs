<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
</head>

<body id="backend">
    <h1>Editando: {{producto.nombre}}</h1>
    <div class="container mb-4">
        <!-- Start Top Header Bar -->
        {{> header}}

        <div class="agregar-producto mt-4">
            {{#if mensaje}}
                <p>{{mensaje}}
            {{/if}}
            <form action="/editar-producto/{{producto.id}}" method="post">
                <div class="row">
                    <div class="col-md-6 col-xl-5">
                        <div class="row">
                            <div class="mb-3  col-md-5">
                                <label for="nombre" class="form-label small">Nombre</label>
                                <input type="text" class="form-control" id="nombre" value={{producto.nombre}}
                                    name="nombre" required>
                            </div>


                            <div class="mb-3 col-md-3">
                                <label for="precio" class="form-label small">Precio (u$s)</label>
                                <input type="text" class="form-control" id="precio" value={{producto.precio}}
                                    name="precio" required>
                            </div>

                            <div class="mb-3 col-md-3">
                                <label for="stock" class="form-label small">Stock</label>
                                <input type="number" class="form-control" id="stock" name="stock"  value={{producto.stock}} required>
                            </div>

                            <div class="mb-3 col-md-1">
                                <label for="destacado" class="form-label small">Destacado</label>
                                {{#if producto.destacado}}
                                    <input type="checkbox" class="form-check-input" id="destacado" name="destacado" value="1" checked>
                                {{else}}
                                    <input type="checkbox" class="form-check-input" id="destacado" name="destacado" value="1">
                                {{/if}}

                            </div>
                        </div>

                        <div class="row">
                            <div class="mb-3 col-12 editar" id="imagenCargada">
                            
                                <label for="rutaImagen" class="form-label">Imagen</label>

                                <img src="/uploads/x1_carbon_4_3.jpg-1654801811279.jpg" alt="" class="img-fluid">

                                <input class="form-control" type="file" id="rutaImagen" name="rutaImagen" style="display:none" accept=".png,.jpg,.jpeg">
                            </div>
            
                        </div>


                       




                    </div>
                    <div class="col-md-6 col-xl-7">
                        <div class="row">
                            <div class="mb-3 col-8">
                                <label for="descripcion" class="form-label small">Descripcion</label>
                                <textarea class="form-control" id="descripcion" rows="6"
                                    name="descripcion">{{producto.descripcion}}</textarea>
                            </div>
                            <div class="mb-3 col-4">
                                <label for="caracteristicas" class="form-label small">Caracteristicas</label>
                                <textarea class="form-control" id="caracteristicas" rows="6"
                                    placeholder="Separar con coma las caracterÃ­sticas"
                                    name="caracteristicas">{{producto.caracteristicas}}</textarea>
                            </div>
                        </div>
                    </div>

                </div>



                <button type="submit" class="btn btn-info">Editar</button>
                <a href="/admin" class="btn btn-info">Volver al listado de productos</a>
            </form>
        </div>
    </div>

    {{> footer}}

    <!-- 
    Essential Scripts
    =====================================-->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>


    <script>
        // https://developer.mozilla.org/en-US/docs/Web/API/File/Using_files_from_web_applications
        const contenedor = document.querySelector("#imagenCargada")
        const elInput = document.querySelector("#rutaImagen");

        contenedor.addEventListener("click", function (e) {
            if (elInput) {
                elInput.click();
                document.querySelector("#imagenCargada img").style.display = "none";
                elInput.style.display = "block"
                contenedor.classList.remove("editar")
            }
        }, false);
    </script>
</body>

</html>